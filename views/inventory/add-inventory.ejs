<form action="/inv/add-inventory" method="POST">
  <label for="inv-make">Make:</label>
  <input type="text" id="inv-make" name="inv_make" required />

  <label for="inv-model">Model:</label>
  <input type="text" id="inv-model" name="inv_model" required />

  <label for="inv-year">Year:</label>
  <input
    type="text"
    id="inv-year"
    name="inv_year"
    pattern="[0-9]{4}"
    required
  />

  <label for="inv-description">Description:</label>
  <textarea id="inv-description" name="inv_description" required></textarea>

  <label for="inv-image">Image:</label>
  <input type="text" id="inv-image" name="inv_image" required />

  <label for="inv-thumbnail">Thumbnail:</label>
  <input type="text" id="inv-thumbnail" name="inv_thumbnail" required />

  <label for="inv-color">Color:</label>
  <input type="text" id="inv-color" name="inv_color" required />

  <label for="inv-price">Price:</label>
  <input
    type="text"
    id="inv-price"
    name="inv_price"
    pattern="[0-9]+(\.[0-9]{1,2})?"
    required
  />

  <label for="inv-miles">Mileage:</label>
  <input type="text" id="inv-miles" name="inv_miles" required />

  <label for="inv-classification">Classification:</label>
  <%- dropdown %>

  <button type="submit">Add Classification</button>
</form>
