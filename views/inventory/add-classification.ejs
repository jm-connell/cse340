<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %>
<p class="flash-message"><%- messages() %></p>

<p><i>Classification name must be alphabetic characters only</i></p>

<form action="/inv/add-classification" method="POST">
  <label for="classification-name">Classification Name:</label>
  <input
    type="text"
    id="classification-name"
    name="classification_name"
    pattern="[A-Za-z0-9]+"
    required
  />
  <button type="submit">Add Classification</button>
  <div id="classification-name-error" class="error-message"></div>
</form>
